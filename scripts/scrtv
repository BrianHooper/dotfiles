#!/bin/sh
xrandr --output DVI-D-0 --mode 1680x1050 --pos 0x0 --rotate normal --output HDMI-0 --mode 1920x1080 --pos 1680x0 --rotate normal --output DVI-I-1 --primary --mode 1920x1080 --pos 1680x0 --rotate normal --output DVI-I-0 --off --output DP-1 --off --output DP-0 --off
nvidia-settings --assign CurrentMetaMode="$(xrandr | sed -nr '/(\S+) connected (primary )?[0-9]+x[0-9]+(\+\S+).*/{ s//\1: nvidia-auto-select \3 { ForceFullCompositionPipeline = On }, /; H }; ${ g; s/\n//g; s/, $//; p }')"